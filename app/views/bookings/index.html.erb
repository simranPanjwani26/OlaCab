<p id="notice"><%= notice %></p>

<h1 class="head">Bookings</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
      <th> Pick  Up Time </th>
      <th> Return Time </th>
      <th> Booking Status </th>
      <th> Booking Price </th>
      
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.pick_up_time %></td>
        <td><%= booking.return_time %></td>
        <td><%= booking.booking_status %></td>
        <td><%= booking.booking_price %></td>
      
        <td><%= link_to 'Show', booking_path(booking) %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>
