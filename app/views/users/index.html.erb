<div class="container">   
<h1>User List</h1>

  <div>   
    <%= link_to 'Add User', new_user_registration_path %>   
  </div>   
  <br>   

<table colspan="2">
  <thead>
    <tr>    
        <th>User Email</th>
        <th>First Name </th>
        <th>Last Name </th>
        <th>Phone no.</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email%></td>
        <td><%= user.first_name%></td>
        <td><%= user.last_name%></td>
        <td><%= user.phone_no%></td>
        <div>
          <td>
            <%= link_to 'Show', user_path(user) %>
            <%= link_to 'Edit', edit_user_path(user) %>
            <%= link_to 'Destroy', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
          
        </div>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>


