<p id="notice"><%= notice %></p>

<h1 class="head">Vehicles</h1>

<table> 
  <thead>
    <tr>
      
      <th colspan="2"></th>
      <th>Image</th>
      <th>VehicleType</th>
      <th>LicenseNumber</th>
      <th>VehicleModel</th>
      <th>Location</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td>
          <% if vehicle.image.attached? %>
            <%= image_tag vehicle.image, style: "width: 200px; display: bolck" %>
          <% end %> 
        </td>
        <td><%= vehicle.vehicle_type %></td>
        <td><%= vehicle.license_number %></td>
        <td><%= vehicle.vehicle_model %></td>
        <td><%= vehicle.location %></td>
        <td><%= vehicle.status %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle_path(vehicle), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

